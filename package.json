{
  "type": "module",
  "license": "ISC",
  "scripts": {
    "test": "vitest run",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "format": "prettier --write",
    "lint:md": "pnpm exec markdownlint-cli2 --fix --config .configs/.markdownlint.jsonc",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.98.4"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@vitest/ui": "^3.2.4",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.5",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "typescript": "5.9.2",
    "vitest": "^3.2.4",
    "xo": "^1.2.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix --"
    ],
    "*.{json,jsonc,css,scss}": [
      "pnpm format --"
    ],
    "*.{md,mdx}": [
      "pnpm format --",
      "pnpm lint:md --"
    ]
  }
}
