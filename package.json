{
  "type": "module",
  "license": "ISC",
  "scripts": {
    "fix": "pnpm format && pnpm lint:fix && pnpm lint:md",
    "format": "prettier --config .configs/prettier.config.ts --write .",
    "lint": "xo --config .configs/xo.config.ts .",
    "lint:fix": "pnpm lint --fix",
    "lint:md": "markdownlint-cli2 --fix --config .configs/.markdownlint.jsonc \"**/*.md\" \"**/*.mdx\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "validate": "pnpm typecheck && pnpm lint "
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/web3.js": "^1.98.4"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.33.0",
    "@eslint/json": "^0.13.1",
    "@eslint/markdown": "^7.1.0",
    "@types/bn.js": "^5.1.0",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.5",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4",
    "xo": "^1.2.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix --"
    ],
    "*.{json,jsonc,css,scss}": [
      "pnpm format --"
    ],
    "*.{md,mdx}": [
      "pnpm format --",
      "pnpm lint:md --"
    ]
  }
}
